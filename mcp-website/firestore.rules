rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ” Helpers
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    function isSuperAdmin() {
      return isAuthenticated() && request.auth.token.superAdmin == true;
    }

    function isSelf(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ğŸ‘¤ Admin Users
    match /admin_users/{userId} {
      allow read: if isAdmin();
      allow write: if isSuperAdmin();
    }

    // ğŸ“… Events (visible to everyone, editable only by admins)
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ğŸ‘¥ Participants (only admin can access)
    match /participants/{eventId}/participants_event/{participantId} {
      allow read, write: if isAdmin();
    }

    // ğŸ“¦ Memberships (read-only for user, full access for admin)
    match /memberships/{memberId} {
      allow read: if isSelf(memberId) || isAdmin();
      allow write: if isAdmin();
    }

    // ğŸ§‘â€ğŸ’» Users collection (user can only read/write their own document)
    match /users/{userId} {
      allow read, write: if isSelf(userId);
    }

    // âœ¨ Add other collections here as needed
  }
}