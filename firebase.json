{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "mcp-backend/functions",
      "codebase": "python_codebase",
      "runtime": "python310",
      
      "region": "us-central1",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    },
    {
      "source": "mcp-backend/js_functions",
      "codebase": "js_codebase",
      "runtime": "nodejs20",
      "region": "us-central1",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
     "rewrites": [
    {
      "source": "/events/**",
      "function": "ssrmcpwebsite2a1ad"
    },
    {
      "source": "/event-foto/**",
      "function": "ssrmcpwebsite2a1ad"
    },
    {
      "source": "/admin/events/**",
      "function": "ssrmcpwebsite2a1ad"
    },
    {
      "source": "/admin/membership/**",
      "function": "ssrmcpwebsite2a1ad"
    }
  ],
    
    "headers": [
      {
        "source": "/events/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, s-maxage=300, stale-while-revalidate=60"
          }
        ]
      },
      {
        "source": "/event-foto/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, s-maxage=300, stale-while-revalidate=60"
          }
        ]
      }
    ]

  
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5002
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5003
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "extensions": {}
}
